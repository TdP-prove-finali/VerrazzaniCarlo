<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="983.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.RyderCupSimulator.FXMLController">
   <center>
      <VBox prefHeight="287.0" prefWidth="879.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane gridLinesVisible="true" prefHeight="210.0" prefWidth="879.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="nAppearances" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </GridPane.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#doSelectTeamEurope" text="SelectTeamEUROPE" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button mnemonicParsing="false" onAction="#doSelectTeamUSA" text="SelectTeamUSA" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Insert the minimum number of appearances for each player">
                     <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </GridPane.margin>
                  </Label>
                  <Label text="Select the 12 players for team Europe" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </GridPane.margin>
                  </Label>
                  <Label text="Select the 12 players for team USA" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </GridPane.margin>
                  </Label>
               </children>
            </GridPane>
            <HBox alignment="CENTER" prefHeight="125.0" prefWidth="983.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#doGenerateMatchTable" text="GenerateMatchTable">
                     <HBox.margin>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnSimulateMatches" disable="true" mnemonicParsing="false" onAction="#doSimulateMatches" text="SimulateMatches">
                     <HBox.margin>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </HBox.margin>
                  </Button>
                  <Label text="Select a player">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin></Label>
                  <ComboBox fx:id="boxPlayer" disable="true" prefWidth="150.0" />
                  <Button fx:id="btnCalcolaStats" disable="true" mnemonicParsing="false" onAction="#doCalcolaStats" text="calcolaStats">
                     <HBox.margin>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Ryder Cup Simulator" textFill="#f60707" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <VBox prefHeight="485.0" prefWidth="983.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="287.0" prefWidth="983.0">
               <children>
                  <TextArea fx:id="txtEUR" prefHeight="247.0" prefWidth="492.0" promptText="teamEUR" />
                  <TextArea fx:id="txtUSA" prefHeight="310.0" prefWidth="492.0" promptText="teamUSA" />
               </children>
            </HBox>
            <HBox prefHeight="271.0" prefWidth="983.0">
               <children>
                  <TextArea fx:id="txtCalendar" prefHeight="181.0" prefWidth="738.0" promptText="Matches" />
                  <VBox prefHeight="181.0" prefWidth="248.0">
                     <children>
                        <Label text="Punteggio finale:">
                           <VBox.margin>
                              <Insets bottom="20.0" left="70.0" right="20.0" top="50.0" />
                           </VBox.margin>
                        </Label>
                        <HBox prefHeight="100.0" prefWidth="163.0">
                           <children>
                              <Label text="EUROPE">
                                 <HBox.margin>
                                    <Insets left="35.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="puntiEUR" prefHeight="25.0" prefWidth="43.0">
                                 <HBox.margin>
                                    <Insets right="20.0" />
                                 </HBox.margin>
                              </TextField>
                              <TextField fx:id="puntiUSA" prefHeight="25.0" prefWidth="43.0" />
                              <Label text="USA" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TextArea fx:id="txtStatsPlayer" prefHeight="200.0" prefWidth="200.0" promptText="Stats" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
